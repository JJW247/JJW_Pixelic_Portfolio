<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="rankingItem"
            type="com.mapo.walkaholic.data.model.Ranking" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="12dp"
        app:cardElevation="0dp"
        android:background="@drawable/box_challenge_corner_f5f4f3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="14dp" />
            <!--app:setImage="@{rankingItem.ranking_image}"-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{rankingItem.ranking + "위 "}'
                android:layout_marginLeft="24dp"
                android:textColor="@color/color443f35"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{rankingItem.rankerNicknme + " 님"}'
                android:textColor="@color/color443f35"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                style="@style/font_black_12_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="5,000P"
                android:layout_marginRight="12dp"
                android:textColor="@color/color443f35"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>