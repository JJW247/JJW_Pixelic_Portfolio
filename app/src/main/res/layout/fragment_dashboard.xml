<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.mapo.walkaholic.ui.main.dashboard.DashboardViewModel" />

        <variable
            name="user"
            type="com.mapo.walkaholic.data.model.User" />

        <variable
            name="userCharacter"
            type="com.mapo.walkaholic.data.model.UserCharacter" />

        <variable
            name="expTable"
            type="com.mapo.walkaholic.data.model.ExpTable" />

        <variable
            name="weatherDust"
            type="com.mapo.walkaholic.data.model.WeatherDust" />

        <variable
            name="weather"
            type="com.mapo.walkaholic.data.model.Weather" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F9F9F9"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/dashLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/layout_whitebackground"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/dashLayout3"
                app:layout_constraintTop_toTopOf="parent">

                <FrameLayout
                    android:id="@+id/dashLayoutFrame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/dashIvCharacter"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center|center_vertical" />

                    <SurfaceView
                        android:id="@+id/dashSvCharacter"
                        android:layout_width="64dp"
                        android:layout_height="63dp"
                        android:layout_gravity="center|center_vertical" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:text='@{"레벨 " + viewModel.toAnyToString(expTable.level) + " : 경험치 " + viewModel.toAnyToString(userCharacter.exp - expTable.requireexp2) + " / " + viewModel.toAnyToString(expTable.requireexp1 - expTable.requireexp2)}' />

                <TextView
                    android:id="@+id/dashTvIntro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginTop="20dp"
                    android:text='@{viewModel.getUserCharacterName(userCharacter.type) + " 친구가 " + user.nickname + " 님을 기다렸어요!"}'
                    android:textColor="#FA9F00"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="@{viewModel.showTodayString()}"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/dashTvWalkToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:bufferType="spannable"
                    android:text="@string/dash_walk_distance"
                    android:textSize="32sp" />

                <RelativeLayout
                    android:id="@+id/dashLayoutRelative1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="@string/dash_km_distance"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="20dp"
                        android:text="4.7KM"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/dashLayoutRelative2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="@string/dash_diet_weight"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="20dp"
                        android:text="122CAL"
                        android:textSize="16sp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/dashLayoutWalk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_fa9f00_stroke_120dp"
                        android:foreground="?selectableItemBackground"
                        android:text="@string/dash_walk_record"
                        android:textColor="#FA9F00"
                        android:textSize="20sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_fa9f00_120dp"
                        android:foreground="?selectableItemBackground"
                        android:text="@string/dash_walk_play"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dashLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/layout_whitebackground"
                android:gravity="center|center_vertical"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/dashLayout5"
                app:layout_constraintTop_toBottomOf="@id/dashLayout1"
                tools:layout_editor_absoluteX="24dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/temp_weather" />

                <LinearLayout
                    android:id="@+id/dashLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/layout_greybackground_btn"
                        android:gravity="center"
                        android:padding="2dp">

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingHorizontal="24dp"
                                android:text="자외선"
                                android:textSize="@dimen/text_size_micro" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/layout_whitebackground_bottom"
                                android:gravity="center"
                                android:paddingHorizontal="24dp"
                                android:text="@{weatherDust.uvRay}"
                                android:textSize="@dimen/text_size_micro" />
                        </TableRow>
                    </TableLayout>

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/layout_greybackground_btn"
                        android:gravity="center"
                        android:padding="2dp">

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingHorizontal="24dp"
                                android:text="미세먼지"
                                android:textSize="@dimen/text_size_micro" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/layout_whitebackground_bottom"
                                android:gravity="center"
                                android:paddingHorizontal="24dp"
                                android:text="@{weatherDust.pmDust}"
                                android:textSize="@dimen/text_size_micro" />
                        </TableRow>
                    </TableLayout>

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/layout_greybackground_btn"
                        android:gravity="center"
                        android:padding="2dp">

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingHorizontal="24dp"
                                android:text="초미세먼지"
                                android:textSize="@dimen/text_size_micro" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/layout_whitebackground_bottom"
                                android:gravity="center"
                                android:paddingHorizontal="24dp"
                                android:text="@{weatherDust.pmSuperDust}"
                                android:textSize="@dimen/text_size_micro" />
                        </TableRow>
                    </TableLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/dashTvWeatherDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="20dp"
                    android:paddingHorizontal="20dp"
                    android:text="@string/dash_show_detail"
                    android:textSize="@dimen/text_size_micro" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dashLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/layout_whitebackground"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/dashEndSpace"
                app:layout_constraintTop_toBottomOf="@id/dashLayout3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="20dp"
                    android:paddingHorizontal="20dp"
                    android:text="테마에 따라 걸어보세요"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <Space
                android:id="@+id/dashEndSpace"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/dashLayout5" />

            <ProgressBar
                android:id="@+id/dashProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="@{viewModel.progressBarVisibility ? View.VISIBLE : View.GONE}" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>